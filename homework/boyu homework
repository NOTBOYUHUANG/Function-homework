#question 1

def f(n):
    number = 6 * n - 4
    return number

print (f(4))
print (f(5))
print (f(6))
print (f(7))

#question 2
 
def f(n):
    number = 1 / (3 ** n - 1)
    return number

print (f(1))
print (f(2))
print (f(3))
print (f(4))
print (f(5))

#question 3

def f(n):
    number = ( -1 ** n ) * ( 3 )
    return number

print (f(1))
print (f(2))
print (f(3))
print (f(4))
print (f(5))

